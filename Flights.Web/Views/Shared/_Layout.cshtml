<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini layout-navbar-fixed">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-info navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="~/" class="nav-link">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Home/Contact" class="nav-link">Contact</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Home/About" class="nav-link">About</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                @if (this.User.Identity.IsAuthenticated)
                {
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="~/Account/Logout" class="nav-link">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="~/Account/Login" class="nav-link">Login</a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="~/Account/Register" class="nav-link">Register</a>
                    </li>
                }

            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar bg-light accent-info">
            <!-- Brand Logo -->
            <a href="/" class="brand-link elevation-4 bg-gradient-info">
                <img src="~/images/logo.png" alt="HighFly" class="brand-image img-circle elevation-3 bg-gradient-info" style="opacity: .8">
                <span class=" font-weight-light text-light">          HighFly</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar accent-info">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex ">
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <div class="info">
                            <a href="~/Account/ChangeUser" class="d-block text-black-50">@User.Identity.Name</a>
                        </div>
                    }
                    else
                    {
                        <div class="info">

                        </div>
                    }

                </div>



                <!-- Sidebar Menu -->
                @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("SuperAdmin")
                    || this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                {
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <!-- Add icons to the links using the .nav-icon class
                            with font-awesome or any other icon font library -->
                            <li class="nav-item">
                                <a href="/Account/Register" class="nav-link">
                                    <i class="nav-icon fas fa-edit"></i>
                                    <p>
                                        Register new user
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Admin/CreateRole" class="nav-link">
                                    <i class="nav-icon fas fa-edit"></i>
                                    <p>
                                        Create Role
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Admin/ListUsers" class="nav-link">
                                    <i class="nav-icon far fa-address-book"></i>
                                    <p>
                                        Users
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Airplanes" class="nav-link">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>
                                        Airplanes
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Airports" class="nav-link">
                                    <i class="nav-icon fas fa-table"></i>
                                    <p>
                                        Airports
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Flights" class="nav-link">
                                    <i class="nav-icon far fa-calendar-alt"></i>
                                    <p>
                                        Flights
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Tickets" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Tickets
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Tickets/ChooseFlight" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Buy Ticket
                                    </p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
                @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Employee"))
                {
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                            <li class="nav-item">
                                <a href="/Account/Register" class="nav-link">
                                    <i class="nav-icon fas fa-edit"></i>
                                    <p>
                                        Register new Client
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Airplanes" class="nav-link">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>
                                        Airplanes
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Airports" class="nav-link">
                                    <i class="nav-icon far fa-address-book"></i>
                                    <p>
                                        Airports
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Flights" class="nav-link">
                                    <i class="nav-icon far fa-calendar-alt"></i>
                                    <p>
                                        Flights
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Tickets" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Tickets
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Tickets/ChooseFlight" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Buy Ticket
                                    </p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
                @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Client"))
                {
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <!-- Add icons to the links using the .nav-icon class
                            with font-awesome or any other icon font library -->
                            <li class="nav-item">
                                <a href="/Tickets/ChooseFlight" class="nav-link">
                                    <i class="nav-icon far fa-calendar-alt"></i>
                                    <p>
                                        Search Flights
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Account/ChangeUser" class="nav-link">
                                    <i class="nav-icon far fa-address-book"></i>
                                    <p>
                                        My Account
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Tickets" class="nav-link">
                                    <i class="nav-icon far fa-calendar-alt"></i>
                                    <p>
                                        My Tickets
                                    </p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
                @if (!this.User.Identity.IsAuthenticated)
                {
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item">
                                <a href="/Tickets/ChooseFlight" class="nav-link">
                                    <i class="nav-icon far fa-calendar-alt"></i>
                                    <p>
                                        Search Flights
                                    </p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <!-- Default box -->

                            <div class="container body-content">
                                @RenderBody()
                                <hr />


                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                </div>
            </section>


        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">

            All rights reserved. &copy;HighFly 2020
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/dist/js/demo.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
