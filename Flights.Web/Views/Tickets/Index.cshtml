@model IEnumerable<Flights.Web.Data.Entities.Ticket>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tickets - HighFly</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" />
</head>
<body class="hold-transition sidebar-mini">
    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <h1></h1>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Tickets/ChooseFlight">BuyTicket</a></li>
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
    <!-- Main content -->
    <section class="content">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Tickets</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="Tickets" class="display table table-bordered table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.FlightId)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.Flight.ArrivalAirport.CompleteAirport)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.Flight.DepartureAirport.CompleteAirport)
                                </td>
                                <th>
                                    @Html.DisplayNameFor(model => model.PassangerName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TravelClass)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SeatNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Lugagge)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FlightId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Flight.ArrivalAirport.CompleteAirport)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Flight.DepartureAirport.CompleteAirport)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PassangerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TravelClass)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SeatNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lugagge)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.FlightId)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.Flight.ArrivalAirport.CompleteAirport)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.Flight.DepartureAirport.CompleteAirport)
                                </td>
                                <th>
                                    @Html.DisplayNameFor(model => model.PassangerName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TravelClass)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SeatNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Lugagge)
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
        <!-- /.row -->
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->
    <!-- ./wrapper -->

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        <script>

            $(document).ready(function () {
                $('#tickets').DataTable();
            });</script>

        <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
    }


</body>
</html>
